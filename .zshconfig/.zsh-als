function py() {
    if [ -z "$1" ]; then
        echo "file not found"
        return 1
    fi
    cp "/var/www/.bk/$1" .
}

function pyt() {
    if [ -z "$1" ]; then
        echo "file not found"
        return 1
    fi
    cp "/var/www/.bk/$1" "./$1"
}

function pyr() {
    if [ -z "$1" ]; then
        echo "file not found"
        return 1
    fi
    cp -r "/var/www/.bk/$1" .
}

